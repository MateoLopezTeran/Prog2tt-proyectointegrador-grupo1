<!DOCTYPE html>
<html>
  <%- include('./partials/head') %>

  <body>
	<% if (locals.user != null) { %>
		<%- include('./partials/headerLogueado') %>
	  <% } else { %>
		<%- include('./partials/header') %>
	<% } %>
    <!-- Banner -->
	<div class="banner">
		<img src="/images/computadorasBanner.jpeg" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			
			<% for( let i = 0; i < 4; i++ ) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/detail/<%= productos[i].id %>">
							<figure class="product-box_image">
								<img src="<%= productos[i].images %>" alt="cafetera moulinex">
							</figure>
							<article class="product-box_data">
								<h2><%= productos[i].nombre_producto %></h2>
								<p><%= productos[i].descripcion_producto %></p>
								<p>Comentarios: <%= productos[i].comentarios.length %></p>
								<a href="/profiles"><p>Dueño: <%= productos[i].usuarios.email %> </p></a>
							</article>
						</a>
					</section>
				</div>
			<% } %>	
		</div>
	</div>
	<!-- /Novedades -->
	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más comentados</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for( let i = 4; i < 8; i++ ) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/detail/<%= productos[i].id %>">
							<figure class="product-box_image">
								<img src="<%= productos[i].images %>" alt="cafetera moulinex">
							</figure>
							<article class="product-box_data">
								<h2><%= productos[i].nombre_producto %></h2>
								<p><%= productos[i].descripcion_producto %></p>
								<p>Comentarios: <%= productos[i].comentarios.length %></p>
								<a href="/profiles"><p>Dueño: <%= productos[i].usuarios.email %> </p></a>
							</article>
						</a>
					</section>
				</div>
			<% } %>
			
		</div>
	</div>
	<!-- /Más comentados -->
	<%- include('./partials/footer') %>
  </body>
</html>

