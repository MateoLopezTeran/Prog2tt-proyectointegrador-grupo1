<!DOCTYPE html>
<html>
  <%- include('./partials/head') %>

  <body>
	<%- include('./partials/header') %>

    <!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Editar mi perfil</h2>
			</div>
			<!-- Show the "ultimos" products -->
    <h2 class="col-12">
        <!-- Formulario -->
        <form action="/profiles/profilesEdit/<%= user.id %>" method="POST">
            <label for="email">Email:</label>
            <input type="email" name="email" value="<%= user.email %>">

            <label for="usuario">Foto de perfil: </label>
            <input type="text" name="foto_perfil" value="<%= user.foto_perfil %>">
                        
            <label for="contraseña">Contraseña:</label>
            <input type="password" name="contrasenna" value="">
                        
            <label for="fechaNacimiento">Fecha de nacimiento</label>
            <input type="date" name="fecha_nacimiento" value="<%= user.fecha_nacimiento %>">
                        
            <label for="numeroDocumento">Número de documento</label>
            <input type="number" name="d_n_i" value="<%= user.d_n_i %>">

            <input type="hidden" name="idd" value="<%= user.id %>">

            <button type="submit">ACTUALIZAR PERFIL</button>
        </form>
        <!-- Formulario -->
	</h2>

	<%- include('./partials/footer') %>
  </body>
</html>


