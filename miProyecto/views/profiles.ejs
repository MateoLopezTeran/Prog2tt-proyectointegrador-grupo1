<!DOCTYPE html>
<html>
  <%- include('./partials/head') %>

  <body>
	<%- include('./partials/headerLogueado') %>
    <!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="/images/users/usuario1.png" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"> <%= locals.user.email %>
						<a href="/profiles/profilesEdit">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<% for( let i = 0; i < usuario.length; i++ ) { %>
							<li><%= usuario[i].productos.length %></li>
							<li>200 seguidores</li>
							<li><%= usuario[i].comentarios.length %></li>
						<% } %>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			<% for( let i = 0; i < 4; i++ ) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/detail/<%= usuario[i].productos.id %>">
							<figure class="product-box_image">
								<img src="<%= usuario[i].productos.images %>" alt="cafetera moulinex">
							</figure>
							<article class="product-box_data">
								<h2><%= usuario[i].productos.nombre_producto %></h2>
								<p><%= usuario[i].productos.descripcion_producto %></p>
								<p>Comentarios: 12</p>
							</article>
						</a>
					</section>
				</div>
			<% } %>

			<% for( let i = 4; i < 8; i++ ) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/detail/<%= usuario[i].productos.id %>">
							<figure class="product-box_image">
								<img src="<%= usuario[i].productos.images %>" alt="cafetera moulinex">
							</figure>
							<article class="product-box_data">
								<h2><%= usuario[i].productos.nombre_producto %></h2>								<p>Comentarios: 12</p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
		</div>
	</div>
	<!-- /Mis productos -->

	<%- include('./partials/footer') %>
  </body>
</html>
