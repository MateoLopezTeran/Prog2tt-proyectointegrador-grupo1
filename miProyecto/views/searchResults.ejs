<!DOCTYPE html>
<html>
  <%- include('./partials/head') %>

  <body>
	<% if (locals.user != null) { %>
        <%- include('./partials/headerLogueado') %>
      <% } else { %>
        <%- include('./partials/header') %>
    <% } %>

    <div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de b√∫squeda</h2>
			</div>
            <!-- Show the "busqueda" of products -->
                <% for( let i = 0; i < products.length; i++) { %>
                    <div class="col-12 col-sm-6 col-lg-3">
                        <section class="product-box">
                            <a href="/products/detail/<%= products[i].id %>">
                                <figure class="product-box_image">
                                    <img src=<%= products[i].images %> alt="cafetera moulinex">
                                </figure>
                                <article class="product-box_data">
                                    <h2><%= products[i].nombre_producto %></h2>
                                    <p><%= products[i].descripcion %></p>
                                    <p>Comentarios: 12</p>
                                </article>
                            </a>
                        </section>
                    </div>
                <% } %>
            <!-- Show the "busqueda" of users -->
            <% for( let i = 0; i < user.length; i++ ) { %>
                <div class="col-12 col-sm-6 col-lg-3">
                    <section class="product-box">
                        <a href="/profiles<%= user[i].id %>">
                            <article class="product-box_data">
                                <h2><%= user[i].email %></h2>
                            </article>
                            </a>
                        </section>
                    </div>
            <% } %>

	<%- include('./partials/footer') %>
  </body>
</html>